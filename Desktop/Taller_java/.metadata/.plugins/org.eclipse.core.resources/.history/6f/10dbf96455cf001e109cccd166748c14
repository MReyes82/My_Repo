package figurasClases;

public class Cuadrado extends Figura
{
	private float lado;
	// metodo constructor
	public Cuadrado() // el default
	{
		
	}
	
	public Cuadrado(float lado) // este constructor crea el objeto usando el parametro lado
	{
		this.lado = lado;
	}
	
	// metodos gets y sets
	public float getLado() 
	{
		return lado;
	}

	public void setLado(float lado) 
	{
		this.lado = lado;
	}

	public float getArea() 
	{
		return area;
	}

	//public void setArea(float area) 	<--- no se necesita
	//{
	//	this.area = area;
	//}

	public float getPerimetro() 
	{
		return perimetro;
	}

	//public void setPerimetro(float perimetro)  <--- no se necesita
	//{
	//	this.perimetro = perimetro;
	//}
	
	public void compArea()
	// ejemplo de clase entidad: representa algo de la figura 
	{
		area = lado * lado;
	}
	
	public void compPerimetro()	
	{
		perimetro = lado * 4;
	}
	/*
	public String toString()
	{
		String cadena = "El area del cuadrado es: " + area + 
						" y su perimeteo es: " + perimetro;
		
		return cadena;
	}
	*/
}
